<p id="notice"><%= notice %></p>


<div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
     
          <div class="x_content">
          <center>
            <h4>Order No. <%=@order.o_id%></h4></center>
            <table id="table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  
                  <th >Name</th>
                  <th>Serving</th>
                  <th>Price</th>
                  
                  
                </tr>
              </thead>


              <tbody>
              <% @order_recipes.each do |recipe| %>
                <tr>

                  <td class="text-uppercase"><%= recipe.name %></td>
                  <td><%= recipe.serving %></td>
                  <td><%= recipe.price %></td>
                  
               
                </tr>
                 <% end %>
                <tr>
                   <td>
                   
                	Total
                	</td>
                	<td><%=@order_recipes.map(&:serving).inject(0, :+)%></td>
                	
                	<td>
                    <h4>
                		Rs<%=@order_recipes.map(&:price).inject(0, :+)%></h4>
                	</td>
                </tr>
                <% if @order.preorder %>
                <tr>
                   <td>
                   
                  After Preorder Discount
                  </td>
                  <td>Pre Order Discount : <%=@stat.discount %> %</td>
                  
                  <td>
                   <h3>
                    Rs<%=@order.amount%>
                    </h3>
                  </td>
                </tr>
               <%end%>
                
              </tbody>
            </table>

          </div>
          <%= link_to 'Book More Orders', root_path, :class=>"btn btn-success pull-right btn-block btn-lg", data: { turbolinks: false } %>
        </div>
      </div>
     
  </div>
