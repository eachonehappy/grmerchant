<p id="notice"><%= notice %></p>


<div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
     
          <div class="x_content">
          <center>
            <h3>ORDER NO. <%=@order.o_id%></h3></center>
            <table id="table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  
                  <th >RECIPE KIT ITEM</th>
                  <th>SERVINGS</th>
                  <th>RATE</th>
                  
                  
                </tr>
              </thead>


              <tbody>
              <% @order_recipes.each do |recipe| %>
                <tr>

                  <td class="text-uppercase"><%= recipe.name %></td>
                  <td ><span class="h4"><%= recipe.serving %> </span>Persons</td>
                  <td>RS.<span class="h4"><%= recipe.price %></span></td>
                  
               
                </tr>
                 <% end %>
               
               
                
              </tbody>
            </table>
             <% if @order.preorder %>
                <tr>
                   
                   <span class="h3">
                  </span>
                
                  <span class="h4"> Pre Order Discount : <%=@stat.discount %> %</span>
                  
                  
                  <div class="pull-right">
                   <span class="h4">Total Amount :
                    Rs<%=@order.recipes.map(&:price).inject(0, :+)%>
                    </span> 
                  </div>
                </tr>
               <%end%>
               <br>
             <tr>
                   <span class="h3">
                   
                  Total Items : 
                  </span>
                  <span class="h3"><%=@order_recipes.count%></span>
                  
                  <span class="pull-right">
                   <span class="h3">
                    Amount Paid : Rs.</span><span class="h3"><%=@order.amount%></span>
                  </span>
                </tr>

          </div>
          <%= link_to '<i class="fa fa-refresh"></i> BACK TO HOME <i class="fa fa-refresh"></i>'.html_safe, root_path, :class=>"btn btn-success pull-right btn-block btn-lg", data: { turbolinks: false } %>
        </div>
      </div>
     
  </div>
