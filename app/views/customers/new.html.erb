    <form id="demo-form" data-parsley-validate>
      <label for="fullname">Customer Phone No :</label>
      <%= f.number_field :phone, autofocus: true ,:class=> "form-control", data: { turbolinks: false } ,:required=>"required", :type=>"tel", :pattern=>"^[2-9]{2}[0-9]{8}$", :placeholder=>"ENTER 10 DIGIT CUSTOMER'S MOBILE NUMBER"%>
     


     <br>
     <%= f.submit "NEXT",:class=>"btn btn-success btn-block submit btn-lg" %>
          

    </form>
    <% end %>
    <!-- end form for validations -->

  </div>
</div>