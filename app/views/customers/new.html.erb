<div class="x_panel">
<p id="notice"><%= notice %></p>

<center>
 <%= link_to "<i class='fa fa-arrow-left fa-3x'></i>".html_safe , cart_path, data: { turbolinks: false },:class=> "pull-left"%>
          
  <h3>CUSTOMER PHONE</h3></center>
  <br>
  
  <div class="x_content">
    <%= form_for(@customer, url: new_new_order_path) do |f| %>
