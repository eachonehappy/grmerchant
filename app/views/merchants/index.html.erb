<%= render 'form' %>
<p id="notice"><%= notice %></p>




<div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
     
          <div class="x_content">
            <h1>Merchants</h1>
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Merchant ID</th>
                  <th>Name</th>
                  <th>Role</th>
                  <th>Address</th>
                  <th>Phone</th>
                  <th>Action</th>
                  
                </tr>
              </thead>


              <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td ><%= user.merchant_pin %></td>
                  <td class="text-uppercase"><%= user.full_name %></td>
                  <td class="text-uppercase"><%= user.role %></td>
                  <td class="text-uppercase"><%= user.address %></td>
                  <td><%= user.phone %></td>
                  <td><%= link_to 'Edit', edit_merchant_path(user), :class=> "btn btn-primary", data: { turbolinks: false } %><%= link_to 'Destroy', delete_merchant_path(user), method: :delete, data: { confirm: 'Are you sure?' } ,:class=> "btn btn-danger"%></td>
               
                </tr>
                <% end %>
                
              </tbody>
            </table>
          </div>
        </div>
      </div>

  </div>
</div>